<p id="notice"><%= notice %></p>

<h1>Listing Brackets</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Title</th>
      <th>Settings</th>
      <th>Maps</th>
      <th>Gametypes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brackets.each do |bracket| %>
      <tr>
        <td><%= bracket.game %></td>
        <td><%= bracket.title %></td>
        <td><%= bracket.settings %></td>
        <td><%= bracket.maps %></td>
        <td><%= bracket.gametypes %></td>
        <td><%= link_to 'Show', bracket %></td>
        <td><%= link_to 'Edit', edit_bracket_path(bracket) %></td>
        <td><%= link_to 'Destroy', bracket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

